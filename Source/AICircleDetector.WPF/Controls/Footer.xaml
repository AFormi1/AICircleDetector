<UserControl x:Class="AICircleDetector.WPF.Controls.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AICircleDetector.WPF.Controls"
             xmlns:vm="clr-namespace:AICircleDetector.WPF.ViewModels"
             mc:Ignorable="d" 
             Height="25" d:DesignWidth="800"
             d:Background="White"
             >

    
    <!--<UserControl.DataContext>
        <vm:FooterViewModel/>
    </UserControl.DataContext>-->
    

    <Grid>

        <Border BorderThickness="1" VerticalAlignment="Top" BorderBrush="Black" Height="1"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
           
            
            <TextBlock Text="{Binding ClockText, FallbackValue='05.01.2024 12:00:00'}"
                       VerticalAlignment="Center"/>

            <Border Width="10" BorderThickness="0" />

            <TextBlock Text="© IAM 08.05.2025" VerticalAlignment="Center"/>
            
        </StackPanel>

    </Grid>

</UserControl>
